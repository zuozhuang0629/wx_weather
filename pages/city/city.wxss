/* pages/city/city.wxss */
/* 头部定位 */
page{
    height: 100%;
  }
  .header{
    z-index: 1;
    position: fixed;
    height: 96rpx;
    top: 0;
    width: 100%;
    box-sizing: border-box;
    padding-left: 35rpx;
    padding-right: 35rpx;
    background-color: #43C8AA;
  }
  .header .left-side{
    float: left;
    line-height: 96rpx;
    font-size: 30rpx;
    color: #fff;
  }
  .header .right-side{
    float: right;
    line-height: 96rpx;
    font-size: 30rpx;
    color: #fff;  
  }
  .header .right-side .icon-address{
    font-size: 28rpx;
  }
  
  /* 城市列表选项 */
  .list-city{
    padding-right: 28rpx;
    height: 100%;
    box-sizing: border-box;
    padding-top: 96rpx;
  }
  .list-city .city-block{
  
  }
  .list-city .city-block .first-character{
    height: 80rpx;
    box-sizing: border-box;
    padding-left: 35rpx;
    padding-right: 55rpx;
    background-color: #F0EDF1;
    line-height: 80rpx;
    color: #aaa;
    font-size: 28rpx;
  }
  .list-city .city-block .hot-city-box{
    padding: 35rpx;
    padding-bottom: 15rpx;
  }
  .list-city .city-block .hot-city-box .hot-item{
    display: inline-block;
    height: 70rpx;
    line-height: 70rpx;
    padding-right: 20rpx;
    padding-left: 20rpx;
    border: solid 2rpx #EFECF0;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    font-size: 30rpx;
    color: #333;
  
  }
  .list-city .city-block .city-item{
    height: 90rpx;
    width: 100%;
    border-bottom: solid 2rpx #EEEEEE;
    line-height: 90rpx;
    padding-left: 35rpx;
    padding-right: 35rpx;
    color: #333;
    font-size: 30rpx;
  }
  /* 字母列表 */
  .a-z{
    width: 35rpx;
    position: fixed;
    top: 122rpx;
    text-align: center;
    right: 6rpx;
    color: #43C8AA; 
  }
  .a-z .first-letter{
    font-size: 30rpx;
    height: 40rpx;
    line-height: 40rpx;
  }
  .a-z .icon-hot{
    height: 40rpx;
    line-height: 40rpx;  
    font-size: 30rpx;
  } 
  /* 显示字母 */
  .show-letter{
    height: 120rpx;
    width: 120rpx;
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin:auto;
    text-align: center;
    line-height: 128rpx;
    background: #fff;
    z-index: 1;
    border-radius: 8rpx;
    box-shadow: 0px 0px 10px rgba(51, 51, 51, 0.3);
    font-weight: bold;
    color: #333;
    font-size:44rpx;
  }